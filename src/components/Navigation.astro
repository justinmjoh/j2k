---
const links: {name: string, href: string}[] = [
    {
        name: "About",
        href: "/about",
    },
    {
        name: "Portfolio",
        href: "/portfolio",
    },
];
---

<nav>
    <h1>
        <a href="/">Justin Johnson</a>
    </h1>
    <ul>
        {
            links.map((link) => (
                <li>
                    <a href={link.href}>{link.name}</a>
                </li>
            ))
        }
    </ul>
</nav>

<style>
    @font-face {
        font-family: "PressStart2P";
        src: url("/fonts/PressStart2P-Regular.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    :root {
        --vaporwave-pink: #ff71ce;
        --vaporwave-blue: #01cdfe;
        --vaporwave-green: #05ffa1;
        --vaporwave-purple: #b967ff;
        --vaporwave-yellow: #fffb96;
        --game-gray: #EDEDED;
    }
    /* Default / Mobile */
    nav {
        width: 100%;
        display: flex;
        flex-direction: column;
        background-color: var(--vaporwave-yellow);
        border: 4px solid #000000;
    }
    h1 {
        margin: 16px;
        text-align: center;
        font-family: "PressStart2P";
        font-size: 24px;
        color: #000000;
    }

    h1 a {
        text-decoration: none;
        color: #000000;
        text-shadow: 3px 2px 0 var(--vaporwave-blue), 6px 4px 0 var(--vaporwave-pink);
    }
    h1 a:hover, h1 a:focus {
        color: var(--game-gray);
        text-shadow: 3px 2px 0 var(--vaporwave-purple), 6px 4px 0 var(--vaporwave-green);
    }
    ul {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        list-style: none;
    }

    li a {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 16px;
        margin-right: 16px;
        margin-top: 8px;
        margin-bottom: 8px;
        padding-top: 4px;
        padding-bottom: 4px;
        background-color: var(--vaporwave-purple);
        border: 4px solid #000000;
        text-decoration: none;
        font-family: "PressStart2P";
        font-size: 16px;
        color: #EDEDED;
        text-shadow: 3px 2px 0 #000000;
    }
    li a:hover, li a:focus {
        background-color: var(--vaporwave-green);
        color: black;
        text-shadow: 3px 2px 0 #EDEDED;
    }
    /* Medium Screens */
    @media (min-width: 769px) {
        nav {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
        h1 {
            /* font-size: 36px; */
        }
        ul {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
        li a {
            margin-left: 8px;
            margin-right: 8px;
            padding-top: 8px;
            padding-bottom: 8px;
            padding-left: 16px;
            padding-right: 16px;
            /* font-size: 24px; */
        }
    }

    /* Large Screens */
    @media (min-width: 1025px) {
    }
</style>
