---
import devo from "../assets/devo.png";
import Window from "./Window.astro";

import {frontmatter, Content} from "../content/about/about-me.md"
---
<main>
    
    <Window headerTitle={frontmatter.title}>
        <div class="about-image-container">
            <img class="about-image" src={devo.src} alt="Justin in DEVO costume">
        </div>
       <Content />
    </Window>
</main>

<style>
    :root {
        --vaporwave-pink: #ff71ce;
        --vaporwave-blue: #01cdfe;
        --vaporwave-green: #05ffa1;
        --vaporwave-purple: #b967ff;
        --vaporwave-yellow: #fffb96;
        --game-gray: #EDEDED;
    }
    main {
        display: grid;
        justify-items: center;
        row-gap: 48px;
    }
    .about-image-container {
        display: flex;
        justify-content: center;
    }
    .about-image {
        width:100%;
        border: solid 4px #000000;
        max-width: 300px;
        max-height: 400px;
        box-shadow: 5px 10px var(--vaporwave-purple);
    }
    /* Medium Screens */
    @media (min-width: 769px) {
        .window-header h2 {
            font-size: 16px;
        }
        .window-body p{
            font-size: 16px;
        }
    }
</style>