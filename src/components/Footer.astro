---
import { Icon } from 'astro-icon/components'
const socials: { href: string, iconName: string}[] = [
    {
        href: "https://www.linkedin.com/in/justinmjoh/",
        iconName: "mdi:linkedin"
    },
    {
        href: "https://github.com/justinmjoh",
        iconName: "mdi:github"
    }
];
---

<footer>
  <p class="copyright">&#169;{new Date().getFullYear()}</p>
  <span class="seperator">|</span>
  <ul class="icons">
    {socials.map((social) => {
        return (
            <a href={social.href} target="_blank" rel="noopener noreferrer">
                <Icon class="footer-icon" name={social.iconName}/>
            </a>
        );
    })}
  </ul>
</footer>

<style>
    @font-face {
        font-family: "PressStart2P";
        src: url("/fonts/PressStart2P-Regular.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    :root {
        --vaporwave-pink: #ff71ce;
        --vaporwave-blue: #01cdfe;
        --vaporwave-green: #05ffa1;
        --vaporwave-purple: #b967ff;
        --vaporwave-yellow: #fffb96;
        --game-gray: #EDEDED;
    }
    footer {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        border: 4px solid #000000;
        background-color: var(--vaporwave-pink);
        color: var(--game-gray);
        text-align: center;
    }
    .copyright {
        font-family: "PressStart2P";
        font-size: 16px;
        text-shadow: 3px 2px 0 #000000;
        margin-left: 4px;
        margin-right: 4px;
    }
    ul {
        margin: 0;
        padding: 0;
        display: flex;
        list-style: none;
    }
    .seperator {
        font-family: "PressStart2P";
        font-size: 16px;
        margin-left: 4px;
        margin-right: 4px;
        text-shadow: 3px 2px 0 #000000;
    }
    .footer-icon {
        color: var(--game-gray);
        font-size: 24px;
        margin-left: 4px;
        margin-right: 4px;
        filter: drop-shadow(3px 2px #000000);
    }
    .footer-icon:hover, .footer-icon:focus {
        color: var(--vaporwave-blue);
    }

</style>
