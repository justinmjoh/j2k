---
const  {headerTitle, headerColor="green"} = Astro.props;
---

<section class="window">
    <div class={"window-header " + headerColor}>
        <h2>{headerTitle}</h2>
    </div>
    <div class="window-body">
        <slot />
       
    </div>
</section>

<style>
    :root {
        --vaporwave-pink: #ff71ce;
        --vaporwave-blue: #01cdfe;
        --vaporwave-green: #05ffa1;
        --vaporwave-purple: #b967ff;
        --vaporwave-yellow: #fffb96;
        --game-gray: #EDEDED;
    }
    @font-face {
        font-family: "PressStart2P";
        src: url("/fonts/PressStart2P-Regular.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Montserrat";
        src: url("/fonts/Montserrat-Regular.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    .window {
        display: flex;
        flex-direction: column;
        border: 4px solid #000000;
        /* width: 80%; */
        box-shadow: 5px 10px;
    }
    .window-header {
        display: flex;
        /* background-color: var(--vaporwave-green); */
        border-bottom: 4px solid #000000;
    }
    .window-header h2 {
        margin: 0;
        padding-left: 16px;
        padding-right: 16px;
        padding-top: 8px;
        padding-bottom: 8px;
        font-family: "PressStart2P";
        font-size: 16px;
    }
    .window-body {
        display: flex;
        flex-direction: column;
        padding-left: 16px;
        padding-right: 16px;
        padding-top: 8px;
        padding-bottom: 8px;
        background-color: var(--game-gray);
        font-family: "Montserrat";
    }
    .pink {
        background-color: var(--vaporwave-pink);

    }
    .blue {
        background-color: var(--vaporwave-blue);
        
    }
    .green {
        background-color: var(--vaporwave-green);
    }
    .purple {
        background-color: var(--vaporwave-purple);

    }
    .yellow {
        background-color: var(--vaporwave-yellow);
    }
    /* Medium Screens */
    @media (min-width: 769px) {
        .window-header h2 {
            font-size: 16px;
        }
        .window-body p{
            font-size: 16px;
        }
    }
</style>